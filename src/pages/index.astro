---
import Layout from "../layouts/Layout.astro";
import Header from "../layouts/Header.astro";
//import Modal from '../components/Modal.astro';
import Modal from "../components/Modal.jsx";
import Card from "../components/Card.jsx";

import { getCollection } from "astro:content";
import { Image } from "astro:assets";
const releases = await getCollection("releases");
const latestRelease = releases[0].data;

import homeImgOne from "../static/images/home/0.jpg";
---

<Layout title="Home">
	<Modal initialContent={latestRelease} client:load />
	<div class="overlay"></div>
	<Header />
	<main class="">
		<h1 class="primary-header">
			I am a recording artist using music and digital art to connect with
			my audience and tell an inter-connected story.
		</h1>
		<div class="home-container">
			<iframe
				width="100%"
				height="500px"
				src="https://www.youtube.com/embed/iBH6FmY1N78?si=FW4zZQZHXoUGJVpe"
				title="YouTube video player"
				frameborder="0"
				allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
				referrerpolicy="strict-origin-when-cross-origin"
				allowfullscreen></iframe>
			<div class="link-container">
				<a href="/contact" class="link-button">Work With Me</a>
			</div>
			<hr />
			<div class="image-container">
				<Image src={homeImgOne} alt="test" />
			</div>
			<div class="column-container">
				<div class="info-container">
					<p>
						With over 20 years of experience in writing, recording
						and performing music, I have written for leading brands,
						played multiple international tours, and continue to
						utilize my skills to push the boundaries of where my
						music can go, be it around the world or in the virtual
						space.
					</p>
					<div class="link-container">
						<a href="/about" class="link-button">Learn More</a>
					</div>
					<hr />
					<div class="songkick-container">
						<a
							href="https://www.songkick.com/artists/8383753"
							class="songkick-widget"
							data-theme="dark"
							data-track-button="on"
							data-detect-style="off"
							data-background-color="rgb(116,0,222,1)"
							data-font-color="rgb(255,255,255,1)"
							data-button-bg-color="rgb(255,255,255,1)"
							data-button-text-color="rgb(0,0,0,1)"
							data-locale="en"
							data-other-artists="on"
							data-share-button="on"
							data-country-filter="on"
							data-rsvp="on"
							data-request-show="on"
							data-past-events="off"
							data-past-events-offtour="off"
							data-remind-me="off"
							style="display: none;"></a>
						<script
							defer
							src="//widget-app.songkick.com/injector/8383753"
						></script>
					</div>
					<p>
						I post updates every week documenting my process,
						sharing my work, and helping others achieve their
						creative goals in any way I can.
					</p>
					<div class="link-container">
						<a href="/contact" class="link-button">Stay In Touch</a>
					</div>
					<hr />
				</div>
			</div>
		</div>
		<script src="https://static.elfsight.com/platform/platform.js" async
		></script>
		<div
			class="elfsight-app-9fe7a59c-5190-4572-8502-3004f951bf28"
			data-elfsight-app-lazy
		>
		</div>
	</main>
</Layout>

<script defer="true"></script>
