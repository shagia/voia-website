---

import { Image } from 'astro:assets';

import HeadgearLogo from '../static/images/headgear-logo.svg'
import YouTube from '../static/images/socials/YouTube.svg'
import Discord from '../static/images/socials/Discord.svg'
import Instagram from '../static/images/socials/Instagram.svg'
import Spotify from '../static/images/socials/Spotify.svg'
import TikTok from '../static/images/socials/TikTok.svg'
import Soundcloud from '../static/images/socials/Soundcloud.svg'

const socialLinks = [
  {
    href: "https://www.youtube.com/@voia_online",
    logo: {YouTube},
    alt: "Follow on Youtube"
  },
  {
    href: "https://discord.com/invite/Jjjcabxq4W",
    logo: {Discord},
    alt: "Join Discord"
  },
  {
    href: "https://instagram.com/voia_online",
    logo: {Instagram},
    alt: "Follow on Instagram"
  },
  {
    href: "https://open.spotify.com/artist/4SgHwxSnXkbmCqASAJj8Ym?si=D5ZOFsHHQqK4t1fP3IwgrQ",
    logo: {Spotify},
    alt: "Follow on Spotify"
  },
  {
    href: "https://tiktok.com/@voia_online",
    logo: {TikTok},
    alt: "Follow on TikTok"
  },
  {
    href: "https://soundcloud.com/voia_online",
    logo: {Soundcloud},
    alt: "Follow on Soundcloud"
  },
]


---

<section class="header-root">
	<div class="header-container">
		<div class="header-content-container">
			<div class="logo-container">
      <a href="/">
				<Image class="headgear-logo" src={HeadgearLogo} alt="Voia's headgear logo" />
			</a>
			<a href="/">
        <span class="header-title">Voia</span>
			</a>
			<div class="header-copyright">
				Â© 2024 Voia. All rights reserved
			</div>
		</div></div>
		<div class="header-links">
			<ul>
				<li><a href="/about">About</a></li>
				<li><a href="/music">Music</a></li>
				<li><a href="/contact">Contact</a></li>
			</ul>
		</div>
	</div>
	<div class="header-socials">
		<ul>
            {
              socialLinks.map((link: any) => {
                console.log()
                return (
                  <li><a target="_blank" href={link.href}><img class="social-icon" src={Object.values(link.logo)[0].src} alt={link.alt}/></a></li>
                )
              }
          )}
		</ul>
	</div>
</section>
<style>
.header-root {
  background-color: #8242DC;
  max-width: 100%;
  padding: var(--common-space-lr) var(--common-space-lr) 0.5rem var(--common-space-lr);
}
.header-container {
  color: white;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: flex-end;
  align-content: stretch;
  border-bottom: white 3px solid;
}
.logo-container {
  display: flex;
  align-items: self-end;
  flex-direction: row;
}
.header-content-container {
  display: inline-flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-end;
  align-content: stretch;
}
.header-title {
  font-size: var(--text-xl);
  font-family: sans-serif;
  font-family: var(--header-font-one);
  font-weight: 500;
  line-height: 70%;
}
.header-copyright {
  font-size: var(--text-xs);
  font-family: sans-serif;
  font-family: var(--header-font-two);
}
.header-content-container * {
  padding-right: 0.4rem;
}
.headgear-logo {
  background-color: transparent;
}
.header-links {
  bottom: 0;
  font-family: sans-serif;
  font-family: var(--header-font-one);
  font-size: 1.5rem;
  font-weight: 500;
}
.header-links li, .header-socials li {
  display: inline;
}
.header-links ul, .header-socials ul {
  padding: 0;
  margin: 0;
}
.header-socials {
  text-align: right;
}
.header-socials .social-icon {
  padding: 0.2rem;
  max-height: 28px;
  vertical-align: middle;
}

@media screen and (max-width: 900px) {
  .header-container {
    flex-direction: column;
    align-items: center;
    border-bottom: none;
  }
  .logo-container {
  display: flex;
  align-items: center;
  flex-direction: column;
}
  .header-socials {
    text-align: center;
  }
  
}
</style>